<body class="login_background" style="padding-top: 250px !important; padding-bottom: 400px !important;">
  <div class="offset-md-1 col-md-4" style="background-color: rgba(0, 0, 0, 0.46); color: white; padding: 30px;">
    <h2 style="font-family: 'Nanum Brush Script'; font-size: 50px; margin-left: 20px;">민주주의의 꽃은 한 표 입니다!</h2>
    
    <%# 경고, 안내메세지 %>
    <div style="color: yellow; margin-left: 20px;">
      <%= alert %>
      <%= notice %>
    </div>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field col-12 col-sm-7 col-md-7" style="margin-top: 20px;">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, :required => true, autocomplete: "email", class: "form-control" %>
      </div><br />
    
      <div class="field col-12 col-sm-7 col-md-7">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", :required => true, class: "form-control" %>
      </div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="field col-12 col-sm-7 col-md-7">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
    
      <div align="left" class="actions">
        <%= f.submit "로그인", class: "btn btn-primary", style: "margin-top: 10px; margin-left: 20px;" %>
      </div>
    <% end %>
    <hr style="border: 1px solid white;"/>
    <%= render "devise/shared/info" %>
  </div>
</body>